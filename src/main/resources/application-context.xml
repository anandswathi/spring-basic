<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-4.0.xsd">

	<bean name="fileMessageReader"
		class="com.yaliprowess.spring.session.basic.message.impl.FileMessageReaderImpl">
		<constructor-arg value="${message.file.name}" />
	</bean>
	<bean name="httpMessageReader"
		class="com.yaliprowess.spring.session.basic.message.impl.HTTPMessageReaderImpl">
		<property name="restUrl" value="${message.http.url}" />
	</bean>

	<!-- Service layer -->
	<bean name="readerService"
		class="com.yaliprowess.spring.session.basic.service.ReaderService">
		<!-- <constructor-arg ref="fileMessageReader" /> -->
		<constructor-arg ref="httpMessageReader" />
	</bean>

	<!-- Property file loader with spring profiles-->
	<beans>
		<bean id="placeholderConfig"
			class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
			<property name="location" value="classpath:application-dev.properties" />
		</bean>
	</beans>
		 
	<beans profile="test">
		<bean id="placeholderConfig"
			class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
			<property name="location" value="classpath:application-test.properties" />
		</bean>
	</beans>
	
</beans>